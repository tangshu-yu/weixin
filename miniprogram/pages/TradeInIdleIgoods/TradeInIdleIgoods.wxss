/* pages/TradeInIdleIgoods/TradeInIdleIgoods.wxss */

/* 分类的类 */

.fenlei {
  display: flex;
  justify-content: space-around;
  width: 100%;
  height: 190rpx;
  margin-top: 10rpx;
  background-color: rgba(255, 255, 255, 0.952);
  border-bottom: 2rpx rgb(190, 39, 39) solid;
}

.fenlei .navi {
  flex-grow: 1;
  width: 50rpx; /*此处无效，但是必须存在*/
}

.leibie {
  margin-top: 18rpx;
  width: 100%;
  height: 70%;
  text-align: center;
}

.leibie image {
  margin: auto 0rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-top: 10rpx;
}

.leibie view {
  font-size: 30rpx;
  color: #666;
  margin-top: -14rpx;
}

.sousuo {
  height: 120rpx;
  width: 100%;
}

.sousuo image {
  width: 100%;
  height: 100%;
}

/* 首页的轮播图 */

.swiper {
  height: 400rpx;
  width: 100%;
}

.swiper-image {
  height: 100%;
  width: 100%;
}

.slide-image {
  height: 100%;
  width: 100%;
}

/* 今日推荐 */

.tuijian-img {
  position: absolute;
  margin-top: 14rpx;
  width: 100%;
  height: 60rpx;
  background: linear-gradient(to right, rgba(235, 52, 61, 0.911), rgba(219, 32, 41, 0.644) 80%);
}

.tuijian-img image {
  position: absolute;
  right: 0rpx;
  width: 220rpx;
  height: 60rpx;
}

.tuijian-cont {
  position: absolute;
  left: 10rpx;
  top: 0rpx;
  color: white;
  font-weight: 600;
}

.page {
  margin: 10rpx 10rpx 10rpx 10rpx;
}

.head {
  width: 70rpx;
  height: 70rpx;
  border-radius: 35px;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}

.body {
  display: flex;
  flex-direction: column;
  margin: 10rpx 10rpx 10rpx 10rpx;
}

.author {
  width: 100%;
  height: 100rpx;
  font-size: small;
}

.view {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.content {
  margin-left: 10rpx;
  width: 90%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 20;
  font-size: small;
  margin-top: 20rpx;
}

.contnet-img {
  display: flex;
  flex-direction: row;
}

.image {
  width: 300rpx;
  height: 225rpx;
  margin-top: 10rpx;
  margin-left: 10rpx;
  margin-bottom: 10rpx;
}

.date-content {
  font-size: xx-small;
}

.textContent {
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.comment-image {
  position: absolute;
  right: 70rpx;
  margin-bottom: 40rpx;
  width: 50rpx;
  height: 50rpx;
}

.comment-count {
  position: absolute;
  right: 50rpx;
  margin-bottom: 10rpx;
  font-size: small;
}

/**列表图片*/

.options-image {
  height: 200rpx;
  display: flex;
  /*row 横向  column 列表  */
}

.options {
  margin-left: 550rpx;
}

.date-comment {
  display: flex;
  flex-direction: row;
}

/*分割线样式*/

.divLine {
  background: #e0e3da;
  width: 100%;
  height: 5rpx;
  margin-top: 40rpx;
}

.save-bottom {
  width: 100%;
  height: 110rpx;
}

.weui-search-bar__label {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 2;
  border-radius: 3px;
  text-align: center;
  color: #9b9b9b;
  background: #fff;
  line-height: 28px;
}

.weui-icon-search {
  margin-right: 8px;
  font-size: inherit;
}

.weui-search-bar__text {
  display: inline-block;
  font-size: 14px;
  vertical-align: middle;
}
